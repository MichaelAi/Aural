<UserControl
    x:Class="Aural.View.CurrentPlaylistUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aural.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d"
    DataContext="{Binding Player, Source={StaticResource Locator}}"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <MenuFlyout x:Key="PlaylistItemContextMenuFlyout">
            <MenuFlyoutItem Text="&#xE768; Play" FontFamily="Segoe MDL2 Assets"  CommandParameter="{Binding ElementName=PlaylistListView, Path=SelectedItems}" Command="{Binding Player.MediaPlayCommand, Source={StaticResource Locator}}"/>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem x:ConnectionId='1'                              Text="&#xE894; Remove" CommandParameter="{Binding}" FontFamily="Segoe MDL2 Assets"/>
            <MenuFlyoutItem Text="&#xE8E6; Clear Selection" FontFamily="Segoe MDL2 Assets"/>
        </MenuFlyout>

    </UserControl.Resources>
    <Grid x:ConnectionId='2' x:Name="PlaylistRoot">
        <ListView x:ConnectionId='3' x:Name="PlaylistListView" ItemContainerStyle="{StaticResource ListViewItemNoCheckbox}" AllowDrop="True" ReorderMode="Enabled" ItemsSource="{Binding CurrentPlaylist.Items}" CanDragItems="True" CanReorderItems="True" SelectionMode="Multiple">
            <ListView.Header>
                <TextBlock Text="Now Playing" FontWeight="Normal" Margin="10"/>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Margin="0" x:Name="TrackNoLabel" Width="60" Style="{StaticResource PlaylistPlayButton}" Content="{Binding PlaylistTrackNo, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:D4}'}" Foreground="{ThemeResource SystemBaseLowColor}" Background="Transparent" VerticalAlignment="Center" Command="{Binding Player.MediaPlayCommand, Source={StaticResource Locator}}"  CommandParameter="{Binding}"/>
                        <Grid x:ConnectionId='4'                      Grid.Column="1"                                      FlyoutBase.AttachedFlyout="{StaticResource PlaylistItemContextMenuFlyout}" Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" IsHitTestVisible="True">
                            <interactivity:Interaction.Behaviors>
                                <core:EventTriggerBehavior EventName="DoubleTapped">
                                    <core:InvokeCommandAction Command="{Binding Player.MediaPlayCommand, Source={StaticResource Locator}}" CommandParameter="{Binding}"/>
                                </core:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                            <Grid>
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontWeight="Light" Text="{Binding Properties.TrackNumber}" Margin="5,5,0,5"/>
                                        <TextBlock FontWeight="Light" Text="." Margin="1,5,5,5"/>
                                        <TextBlock FontWeight="Light" Text="{Binding Properties.Title}" Margin="5"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                        <TextBlock FontWeight="Light" Text="{Binding Properties.Artist}" Margin="5,0,5,0" Style="{StaticResource BodyTextBlockStyle}" FontSize="10"/>
                                        <TextBlock FontWeight="Light" Text="\" Margin="5,0,5,0" Style="{StaticResource BodyTextBlockStyle}" FontSize="10"/>
                                        <TextBlock FontWeight="Light" Text="{Binding Properties.Album}" Margin="5,0,5,0" Style="{StaticResource BodyTextBlockStyle}"  FontSize="10"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>

